<Window x:Class="CrazyZoo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrazyZoo"
        mc:Ignorable="d"
        Title="Crazy Zoo" Height="450" Width="615">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <ListBox Name="AnimalList" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="AnimalListBox_SelectionChanged" RenderTransformOrigin="-0.626,0.529" Height="264" VerticalAlignment="Top" HorizontalAlignment="Left" Width="122">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Type}" />
                        <TextBlock Text=" " />
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox Name="Logs" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,264,0,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Animal.Type}" />
                        <TextBlock Text=" " />
                        <TextBlock Text="{Binding Animal.Name}" FontWeight="Bold" />
                        <TextBlock Text=": " />
                        <TextBlock Text="{Binding Information}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock HorizontalAlignment="Left" Margin="180,21,0,0" TextWrapping="Wrap" Text="Name:" VerticalAlignment="Top" Width="42" Height="16"/>
        <TextBlock Name="AnimalNameValue" HorizontalAlignment="Left" Margin="254,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="83" Height="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="180,42,0,0" TextWrapping="Wrap" Text="Age:" VerticalAlignment="Top" Width="42" Height="16"/>
        <TextBlock Name="AnimalAgeValue" HorizontalAlignment="Left" Margin="254,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="33" Height="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="180,63,0,0" TextWrapping="Wrap" Text="Description:" VerticalAlignment="Top" Width="69" Height="16"/>
        <TextBlock Name="AnimalDescriptionValue" HorizontalAlignment="Left" Margin="254,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="163" Height="52" Text=""/>
        <Button Content="Make sound" HorizontalAlignment="Left" Margin="176,132,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.252,0.453" Height="20" Width="70" Click="MakeSoundButton_Click"/>
        <Button Content="Feed" HorizontalAlignment="Left" Margin="307,172,0,0" VerticalAlignment="Top" Height="20" Width="30" Click="FeedButton_Click"/>
        <Button Content="Shelter new animal" HorizontalAlignment="Left" Margin="176,231,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.252,0.453" Click="AddAnimalButton_Click" Height="20" Width="120"/>
        <Button Content="Release animal" HorizontalAlignment="Left" Margin="336,231,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.252,0.453" Click="RemoveAnimalButton_Click" Height="20" Width="92"/>
        <TextBox Name="AnimalFood" HorizontalAlignment="Left" Margin="176,174,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="FoodTextBox_TextChanged"/>
        <TextBlock Name="AnimalFoodError" HorizontalAlignment="Left" Margin="176,192,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161" FontSize="10" Foreground="#FFC31D1D"/>

    </Grid>
</Window>
